{
  "compilerOptions": {
    "jsx": "react-jsx",
    "module": "esnext",
    "allowJs": true,
    "skipLibCheck": true, // ✅ Bu satırı ekleyin
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    }
  },
  "include": ["src"]
}
